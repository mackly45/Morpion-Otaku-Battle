[flake8]
max-line-length = 150
max-complexity = 12
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info

# Ignore specific warnings that are common in web development
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    F401,  # imported but unused (common in __init__.py files)
    
# Select only critical errors
select = E9,F63,F7,F82,E713,E714,E721,E722,E741,E742,E743,W604

per-file-ignores =
    __init__.py:F401
    model/__init__.py:F401